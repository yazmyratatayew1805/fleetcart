{
    "name": "envaysoft/fleetcart",
    "description": "The FleetCart E-Commerce System.",
    "type": "project",
    "authors": [
        {
            "name": "Mehedi Hassan",
            "email": "MehediDracula@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0.2",
        "cache/predis-adapter": "^1.0",
        "doctrine/dbal": "^2.10",
        "guzzlehttp/guzzle": "^7.2",
        "jackiedo/dotenv-editor": "^1.0",
        "laravel/framework": "^9.19",
        "laravel/helpers": "^1.1",
        "laravel/legacy-factories": "^1.0",
        "laravel/sanctum": "^3.0",
        "laravel/tinker": "^2.7",
        "mehedi/stylist": "dev-master",
        "nwidart/laravel-modules": "^9.0",
        "swayok/alternative-laravel-cache": "^6.1",
        "swayok/cache-filesystem-adapter": "^1.3",
        "symfony/intl": "^5.0",
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "barryvdh/laravel-debugbar": "^3.0",
        "beyondcode/laravel-dump-server": "^1.0",
        "beyondcode/laravel-query-detector": "^1.0",
        "spatie/laravel-ignition": "^1.0",
        "nunomaduro/collision": "^6.1"
    },
    "autoload": {
        "psr-4": {
            "FleetCart\\": "app/",
            "Modules\\": "Modules/",
            "Themes\\": "Themes/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist",
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "wikimedia/composer-merge-plugin": true,
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "nwidart/laravel-modules"
            ]
        },
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "merge-plugin": {
            "require": [
                "Modules/*/composer.json",
                "Themes/*/composer.json"
            ],
            "merge-extra": true,
            "merge-extra-deep": true,
            "merge-scripts": true
        }
    }
}
